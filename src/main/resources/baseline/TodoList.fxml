<AnchorPane prefHeight="637.0" prefWidth="922.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baseline.TodoListController">
   <children>
      <MenuBar layoutX="1.0" layoutY="2.0" prefHeight="25.0" prefWidth="922.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem fx:id="saveToFile" mnemonicParsing="false" onAction="#writeToFile" text="Save as... " />
                  <MenuItem fx:id="openFile" mnemonicParsing="false" onAction="#openExistingFile" text="Open..." />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="View">
              <items>
                <MenuItem fx:id="completeItem" mnemonicParsing="false" onAction="#viewCompleted" text="Completed" />
                  <MenuItem fx:id="incompleteItem" mnemonicParsing="false" onAction="#viewIncompleted" text="Incompleted" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
      <GridPane layoutX="95.0" layoutY="53.0" prefHeight="30.0" prefWidth="804.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="115.0" minWidth="10.0" prefWidth="115.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="252.0" minWidth="0.0" prefWidth="141.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="528.0" minWidth="10.0" prefWidth="528.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="titleTextField" prefHeight="25.0" prefWidth="90.0" promptText="Task Title">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
            <TextField fx:id="descriptionTextField" prefHeight="25.0" prefWidth="220.0" promptText="Description" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
            </TextField>
            <DatePicker fx:id="dueDate" GridPane.columnIndex="1" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
      <Button fx:id="addButton" layoutX="21.0" layoutY="55.0" mnemonicParsing="false" onAction="#addTask" text="Add Task" />
      <Separator layoutX="21.0" layoutY="87.0" prefHeight="3.0" prefWidth="857.0" />
      <Separator layoutX="95.0" layoutY="45.0" orientation="VERTICAL" prefHeight="42.0" prefWidth="7.0" />
      <Separator layoutX="21.0" layoutY="45.0" prefHeight="3.0" prefWidth="857.0" />
      <Label fx:id="label" layoutX="20.0" layoutY="606.0" />
      <TableView fx:id="itemList" layoutX="23.0" layoutY="92.0" prefHeight="453.0" prefWidth="878.0">
        <columns>
          <TableColumn fx:id="titleCol" prefWidth="90.40002250671387" text="Title" />
          <TableColumn fx:id="dateCol" prefWidth="82.39997100830078" text="Due Date" />
            <TableColumn fx:id="descriptionCol" prefWidth="703.0" text="Description" />
        </columns>
      </TableView>
      <Button fx:id="deleteButton" layoutX="21.0" layoutY="560.0" mnemonicParsing="false" onAction="#deleteTask" text="Delete" />
      <Button fx:id="clearButton" layoutX="86.0" layoutY="560.0" mnemonicParsing="false" onAction="#clearList" text="Clear all" />
   </children>
</AnchorPane>
